view {
  width: 100%;
  color: #2c3e50;
}

.user-info-view {
  position: relative;
  border-top: solid 1px #dddee1;
  border-bottom: solid 1px #dddee1;
  margin-bottom: 5px;
}

.userAvatar {
  float: left;
  padding: 10px;
  width: 60px;
  height: 60px;
  position: relative;
}
.userAvatar-hide-image{
  width: 100%;
  height: 100%;
  position: absolute;
  border-radius:30px;
  border: #ffffff;
  z-index: 9999;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  padding: 0px;
}

.userNickName {
  font-size: 14px;
  float: left;
  position: absolute;
  width: 200px;
  bottom: 30px;
  padding: 0px;
  margin: 0px;
  left: 80px;
}

.menu-view view{
  border-top: solid 1px #dddee1;
  padding: 10px;
}