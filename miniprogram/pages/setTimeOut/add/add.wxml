<view style="position: relative;">
  <view class='top-title' style="border-bottom: solid 1px #dddee1;">
    <text style='float:left;margin:10px 0px;font-size:16px;font-weight: bolder;'>新增定时任务</text>
    <i-icon bindtap='touchHelp' style='float:left;margin-top:10px;' type="feedback" size="20" color="#80848f" />
    <i-icon bindtap='touchAdd' style='float:right;margin:10px;color:#2d8cf0;' type="delete_fill" size="22" color="#2d8cf0" />
  </view>

  <view class='edit'>
    <i-panel title="基础用法">
      <i-input value="{{ value1 }}" title="收货人" autofocus placeholder="名字" />
      <i-input value="{{ value2 }}" type="number" title="联系电话" placeholder="请输入手机号" />
      <i-input value="{{ value3 }}" type="textarea" title="详细地址" placeholder="请输入详细地址(最多50字)" maxlength="50" />
      <i-input value="{{ value4 }}" title="用户信息" disabled />
    </i-panel>
  </view>
</view>