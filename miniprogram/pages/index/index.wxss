
view {
  width: 100%;
  color: #2c3e50;
}

.picker-view {
  float: left;
  padding: 20px 0px;
  text-align: center;
  color: #2c3e50;
}

.account-type-view {
  width: 40%;
}

.date-view {
  width: 30%;
}

.time-view {
  width: 30%;
}

.top-button {
  float: left;
