}
.full-button{
  width: 100%;
  
}
.top-button::after {
  border: none;
}

.left-button {
  margin: 0px;
  width: 50%;
  border-radius: 5px 0px 0px 5px;
}

.right-button {
  margin: 0px;
  width: 50%;
  border-radius: 0px 5px 5px 0px;
}

.text-view {
  text-align: center;
}

.text-input {
  border: solid 1px #2c3e50;
}

.account-type-picker-view {
  text-align: center;
}

.record-title-view {
  color: #2c3e50;
}

.record-view-big {
  border-top: 1px solid #2c3e50;
  margin-bottom: 2px;
}

.record-view {
  margin: 0px;
  color: #2c3e50;
  font-size: 14px;
}

.record-view text {
  line-height: 24px;
  height: 24px;
}

.left-text {
  float: left;
  width: 60%;
}

.right-text {
  text-align: right;
  float: right;
  width: 40%;
}
