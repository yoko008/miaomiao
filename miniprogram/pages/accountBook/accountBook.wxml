<view style="position: relative;">
  <view class='top-title' style="border-bottom: solid 1px #dddee1;">
    <text style='float:left;margin:10px 0px;font-size:16px;font-weight: bolder;'>设置账本</text>
    <i-icon bindtap='touchHelp' style='float:left;margin-top:10px;' type="feedback" size="20" color="#80848f" />
    <i-icon wx:if="{{queryResultLength<5}}" bindtap='touchAdd' style='float:right;margin:10px;color:#2d8cf0;' type="add" size="22" color="#2d8cf0" />
  </view>
  <view class='list'>
    <view class="card" wx:for="{{queryResult}}" wx:for-index="index" wx:key="_id">
      <view style='color:#2d8cf0;position: absolute;top:8px;right:10px;width:auto'>
        <i-icon data-id='{{item._id}}' data-index="{{index}}" bindtap='touchClose' type="close" size="22" color="#F4606C" />
      </view>
      <view style='color:#2d8cf0;position: absolute;top:8px;right:40px;width:auto'>
        <i-icon data-obj='{{item}}' data-index="{{index}}" bindtap='touchEdit' type="brush" size="22" color="#2d8cf0" />
      </view>

      <view class='card-title'>
        {{item.accountBookName}}</view>
      <view class='card-comment' wx:if='{{item.userName1!=null}}'>{{item.userName1}}</view>
      <view class='card-comment' wx:if='{{item.userName1==null}}'>[ + ]</view>
      <view class='card-comment' wx:if='{{item.userName2!=null}}'>{{item.userName2}}</view>
      <view class='card-comment' wx:if='{{item.userName2==null && item.userName1!=null}}'>[ + ]</view>
      <view class='card-comment' wx:if='{{item.userName3!=null}}'>{{item.userName3}}</view>
      <view class='card-comment' wx:if='{{item.userName3==null && item.userName1!=null && item.userName2!=null}}'>[ + ]</view>
      <view class='card-comment' wx:if='{{item.userName4!=null}}'>{{item.userName4}}</view>
      <view class='card-comment' wx:if='{{item.userName4==null && item.userName1!=null && item.userName2!=null && item.userName3!=null}}'>[ + ]</view>
      <view class='card-comment' wx:if='{{item.userName5!=null}}'>{{item.userName5}}</view>
      <view class='card-comment' wx:if='{{item.userName5==null && item.userName1!=null && item.userName2!=null && item.userName3!=null && item.userName4!=null}}'>[ + ]</view>
    </view>

    <view wx:if="{{queryResultLength==0}}" class="wx-f2" style='text-align: center;font-size:14px;margin-top:100px;'>
      <view>
        <image style='width:150px;height:174px;' src='../../img/timg.jpg'></image>
      </view>
      点击右上角的“+”来添加一个账本吧
    </view>
  </view>
</view>